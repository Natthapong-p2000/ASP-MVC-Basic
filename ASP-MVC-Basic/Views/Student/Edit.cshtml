@model Student;
@{
    ViewData["Title"] = "แก้ไขข้อมูล";
}

<h1 class="text-center" style="font-weight:bold;">แก้ไขข้อมูล</h1>
<form method="post" asp-controller="Student" asp-action="Edit">
    <div class="form-group my-2">
        <label asp-for="Student_Id"></label>
        <input type="text" asp-for="Student_Id" class="form-control" />
        <span asp-validation-for="Student_Id" class="text-danger"></span>
    </div>
    <div class="form-group my-2">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group my-2">
        <label asp-for="Score"></label>
        <input type="number" asp-for="Score" class="form-control" />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success my-4">อัพเดต</button>
</form>
